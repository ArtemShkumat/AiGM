{
  "type": "object",
  "properties": {
    "type": { "type": "string", "const": "NPC", "description": "Object type, always 'NPC'" },
    "id": { "type": "string", "description": "Unique identifier for the NPC" },
    "name": { "type": "string", "description": "NPC's name" },
    "currentLocationId": { "type": "string", "description": "ID of the NPC's current location" },
    "knownToPlayer": { "type": "boolean", "description": "Whether the player knows of this NPC's existence" },
    "knowsPlayer": { "type": "boolean", "description": "Whether the NPC knows the player" },
    "visibleToPlayer": { "type": "boolean", "description": "Whether the NPC is currently visible to the player" },
    "visualDescription": {
      "type": "object",
      "properties": {
        "gender": { "type": "string" },
        "body": { "type": "string" },
        "visibleClothing": { "type": "string" },
        "condition": { "type": "string" },
        "resemblingCelebrity": { "type": "string", "description": "Optional: Celebrity the character resembles" }
      },
      "required": ["gender", "body", "visibleClothing", "condition"]
    },
    "personality": {
      "type": "object",
      "properties": {
        "temperament": { "type": "string" },
        "traits": { "type": "string", "description": "Formerly quirks. Notable character traits." },
        "motivations": { "type": "string" },
        "fears": { "type": "string" },
        "secrets": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["temperament", "traits", "motivations", "fears", "secrets"]
    },
    "backstory": { "type": "string" },
    "currentGoal": { "type": "string", "description": "What the NPC is currently trying to achieve" },
    "age": { "type": "integer" },
    "dispositionTowardsPlayer": { "type": "string", "description": "e.g., Hostile, Unfriendly, Neutral, Fond, Loyal" },
    "knownEntities": {
      "type": "object",
      "properties": {
        "npcsKnown": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "levelOfFamiliarity": { "type": "string", "description": "Aware/Met/Known/Familiar/Deep" },
              "disposition": { "type": "string", "description": "Hostile/Unfriendly/Neutral/Fond/Loyal" }
            },
            "required": ["name", "levelOfFamiliarity", "disposition"]
          }
        },
        "locationsKnown": { "type": "array", "items": { "type": "string" }, "description": "List of location IDs known by the NPC" }
      },
      "required": ["npcsKnown", "locationsKnown"]
    },
    "questInvolvement": { "type": "array", "items": { "type": "string" }, "description": "List of Quest IDs the NPC is involved in" },
    "inventory": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/inventoryItem" 
      }
    },
    "conversationLog": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": { "type": "string" },
        "description": "Log of conversations, typically key-value pairs like { 'speaker': 'message' }"
      }
    }
  },
  "required": [
    "type", "id", "name", "currentLocationId", "knownToPlayer", "knowsPlayer", "visibleToPlayer", 
    "visualDescription", "personality", "backstory", "currentGoal", "age", "dispositionTowardsPlayer", 
    "knownEntities", "questInvolvement", "inventory", "conversationLog"
  ],
  "definitions": {
    "inventoryItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "quantity": { "type": "integer" }
      },
      "required": ["name", "description", "quantity"]
    }
  }
}
