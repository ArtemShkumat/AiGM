{
  "type": "object",
  "properties": {
    "userFacingText": {
      "type": "string",
      "description": "The narrative text, descriptions, and dialogue to be shown directly to the player."
    },
    "newEntities": {
      "type": "array",
      "description": "List of new NPCs, Locations, or Quests to be created.",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["NPC", "LOCATION", "QUEST"],
            "description": "Type of entity being created"
          },
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "context": {
            "type": "string"
          },
          "currentLocationId": {
            "type": "string",
            "description": "Required for NPCs"
          },
          "locationDetails": {
            "type": "object",
            "properties": {
              "parentLocationId": { "type": "string" },
              "locationType": { "type": "string" }
            },
            "required": ["parentLocationId", "locationType"],
            "description": "Required for locations"
          }
        },
        "required": ["type", "id", "name", "context"]
      }
    },
    "partialUpdates": {
      "type": "object",
      "description": "An object where each key is an existing entity ID and the value contains fields to update.",
      "properties": {
        "player": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["PLAYER"]
            },
            "currentLocationId": {
              "type": "string"
            },
            "visualDescription": {
              "type": "object",
              "properties": {
                "body": {
                  "type": "string"
                },
                "condition": {
                  "type": "string"
                },
                "visibleClothing": {
                  "type": "string"
                }
              }
            },
            "inventory": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "quantity": {
                    "type": "integer"
                  },
                  "action": {
                    "type": "string",
                    "enum": ["Add", "Remove"]
                  }
                },
                "required": ["name", "quantity", "action"]
              }
            },
            "currencies": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "amount": {
                    "type": "integer"
                  },
                  "action": {
                    "type": "string",
                    "enum": ["Add", "Remove"]
                  }
                },
                "required": ["name", "amount", "action"]
              }
            },
            "statusEffects": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the status effect"
                  },
                  "action": {
                    "type": "string",
                    "enum": ["Add", "Remove"]
                  }
                },
                "required": ["name", "action"]
              }
            },
            "rpgTags": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "action": {
                    "type": "string",
                    "enum": ["Add", "Remove"]
                  }
                },
                "required": ["name", "action"]
              }
            },
            "activeQuests": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "questId": {
                    "type": "string",
                    "description": "ID of the quest"
                  },
                  "action": {
                    "type": "string",
                    "enum": ["Add", "Remove"]
                  }
                },
                "required": ["questId", "action"]
              }
            }
          },
          "required": ["type"]
        },
        "world": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["WORLD"]
            },
            "timeDelta": { 
              "type": "object",
              "properties": {
                "amount": {
                  "type": "integer",
                  "minimum": 1 
                },
                "unit": {
                  "type": "string",
                  "enum": [ "seconds", "minutes", "hours", "days"
                  ]
                }
              },
              "required": [
                "amount",
                "unit"
              ]
            }            
          },
          "required": ["type"]
        },
        "npcEntries": {
          "type": "array",
          "description": "List of NPCs to be updated",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "The unique identifier of the NPC being updated"
              },
              "type": {
                "type": "string",
                "enum": ["NPC"]
              },
              "currentLocationId": {
                "type": "string"
              },
              "visualDescription": {
                "type": "object",
                "properties": {
                  "body": {
                    "type": "string"
                  },
                  "condition": {
                    "type": "string"
                  },
                  "visibleClothing": {
                    "type": "string"
                  }
                }
              },
              "currentGoal": {
                "type": "string"
              },
              "dispositionTowardsPlayer": {
                "type": "string"
              },
              "inventory": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "quantity": {
                      "type": "integer"
                    },
                    "action": {
                      "type": "string",
                      "enum": ["Add", "Remove"]
                    }
                  },
                  "required": ["name", "quantity", "action"]
                }
              }
            },
            "required": ["type"]
          }
        },
        "locationEntries": {
          "type": "array",
          "description": "List of locations to be updated",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "The unique identifier of the location being updated"
              },
              "currentCondition": {
                "type": "string"
              }
            },
            "required": ["id", "currentCondition"]
          }
        }
      }
    },
    "combatTriggered": {
      "type": "boolean",
      "description": "Set to true when combat should be initiated based on narrative events or player actions."
    },
    "enemyToEngageId": {
      "type": "string",
      "description": "The ID of the NPC or entity that the player will be fighting in combat."
    }
  },
  "required": ["userFacingText"]
} 